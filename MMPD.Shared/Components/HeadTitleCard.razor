@using Telerik.Blazor.Components
@using Microsoft.AspNetCore.Components
@using Telerik.Blazor
@using Telerik.SvgIcons


<TelerikCard Class="bg-gradient-to-tl from-cyan-600 to-sky-800 text-primary-content border-opacity-20 rounded-md w-full h-auto p-4">
    <CardHeader>
        <h2 class="text-center font-light uppercase text-2xl tracking-wide">Contacts</h2>
    </CardHeader>
    <CardBody>
        @if (Entries != null && Entries.Any())
        {
            <table class="w-full text-sm">
                <tbody>
                    @foreach (var entry in Entries.Take(10))
                    {
                        <tr>
                            <td class="uppercase text-right pr-2 w-1/2">@entry.Key</td>
                            <td class="ps-4 text-left">@entry.Value</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-center italic">No contacts available.</p>
        }
    </CardBody>
</TelerikCard>

@code {
    [Parameter]
    public Dictionary<string, string>? Entries { get; set; }
}
